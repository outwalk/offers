<% content_for :search do %>
  <%= form_tag articles_path, method: :get, class: 'navbar-form', role: 'search' do |f| %>
    <div class="input-group">
      <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: t('.placeholder'), autocomplete: 'off' %>
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </div>
    </div>
  <% end %>
<% end %>
